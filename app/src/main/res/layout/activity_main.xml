<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#D9E4F6"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_marginTop="50dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
<TextView
    android:id="@+id/txtCorrect"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Correct: "
    android:textColor="@color/black"
    android:textSize="30sp"
    android:textStyle="bold"
    android:layout_marginEnd="40dp"/>
    <TextView
        android:id="@+id/txtIncorrect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Incorrect: "
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginStart="5dp"/>
</LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2196F3"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:visibility="invisible"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="15dp"
            android:id="@+id/txtRightAnswer"
            android:text="Right Answer"/>

        <TextView
            android:id="@+id/txtQuestionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D4CECE"
            android:textColor="@color/black"
            android:visibility="visible"
            android:textSize="35sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="15dp"
            android:text="Random Text"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guess the above word:"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="italic"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/edtUserInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="20dp"
            android:inputType="textPersonName"
            android:hint="Input text"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:weightSum="3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnShow"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:backgroundTint="#EB3131"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Show" />

        <Button
            android:id="@+id/btnCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:backgroundTint="#EB3131"
            android:layout_weight="1"
            android:text="Check" />

        <Button
            android:id="@+id/btnSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:backgroundTint="#EB3131"
            android:layout_weight="1"
            android:text="Skip" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed by"
        android:textSize="20dp"
        android:textColor="#80000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cool Kids Studio"
        android:textSize="20dp"
        android:textColor="#80000000"/>

</LinearLayout>